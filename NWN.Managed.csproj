<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <PackageId>NWN.Managed</PackageId>
        <Authors>NWN.NET</Authors>
        <PackageTags>Neverwinter Nights;NWN;</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <RepositoryUrl>https://github.com/nwn-dotnet/NWN.Managed</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <NoWarn>1591</NoWarn>
        <RootNamespace />
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2020.1.0" ExcludeAssets="runtime" />
        <PackageReference Include="NLog" Version="4.7.2" />
        <PackageReference Include="NWN.Core" Version="8193.13.3" PrivateAssets="All" />
        <PackageReference Include="SimpleInjector" Version="5.0.3" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="$(MicrosoftSourceLinkGitHubPackageVersion)" PrivateAssets="All" />
    </ItemGroup>

    <ItemGroup>
        <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).dll" />
        <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).pdb" />
        <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).runtimeconfig.json" />
        <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).deps.json" />
    </ItemGroup>

    <ItemGroup>
        <None Update="src\resources\NLog.dll.nlog">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Link>NLog.dll.nlog</Link>
        </None>
    </ItemGroup>

</Project>
